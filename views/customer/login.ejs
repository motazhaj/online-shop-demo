<%- include('../shared/includes/head', { title: "Online Shop Demo" }) %>
    <link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <%- include("../shared/includes/navbar")  %>
    <section id="headline"><h1>Welcome to the shop</h1></section>
    <section>
        <form class="default-form" action="login" method="post">
            <h1>Create your account</h1>
            <p class="error-message"><%= inputData.message %></p>
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <input type="email" placeholder="Email" name="email" id="email" required>
            <input type="password" placeholder="Password" name="password" id="password" required>
            <button class="default-button" type="submit">Sign in</button>
            <p>Dont have an account <a href="/signup">Sign up</a></p>
        </form>
    </section>
</body>
</html>